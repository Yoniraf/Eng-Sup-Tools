{
  "name": "syncapp-erp-api-runner-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop wrapper for SyncApp ERP API Runner (auto-starts local proxy).",
  "main": "main.js",
  "author": "",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yoniraf/Eng-Sup-Tools.git"
  },
  "scripts": {
    "sync": "node scripts/sync-app-assets.js",
    "dev": "npm run sync && electron .",
    "dist": "npm run sync && electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.engsup.syncapp-erp-api-runner",
    "productName": "SyncApp ERP API Runner",
    "publish": [
      {
        "provider": "github",
        "owner": "Yoniraf",
        "repo": "Eng-Sup-Tools"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "app/**/*"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}


